<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /trainhub/

    # 1. JIKA PATH DIAWALI /api → arahkan ke api/index.php
    RewriteCond %{REQUEST_URI} ^/trainhub/api/
    RewriteRule ^api/(.*)$ api/index.php?path=$1 [QSA,L]

    # 2. Selain itu → arahkan ke public/
    RewriteCond %{REQUEST_URI} !^/trainhub/api/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
